<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/nav.ejs') %>

    <main>
        <% if (errorMessage.length > 0) { %>
            <div class="user-message user-message--error" ><%= errorMessage %></div>
        <% } %>
        <form class="login-form" id="signupForm" action="/signup" method="POST" >
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"                    
                    type="email"
                    name="email"
                    id="email"
                    required
                    value=<%= oldInputs.email %>>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password" 
                    required
                    value="<%= oldInputs.password %>" >
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'confirmPassword') ? 'invalid' : '' %>"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    required
                    value=<%= oldInputs.confirmPassword %>>
            </div>
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>

