<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/nav.ejs') %>

    <main>
        <% if (errorMessage.length > 0) { %>
            <div class="user-message user-message--error" ><%= errorMessage %></div>
        <% } %>
        <form class="login-form" id="loginForm" action="/login" method="POST" >
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                    type="email" 
                    name="email" 
                    required
                    id="email" 
                    value="<%= oldInputs.email %>"
                    >
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                type="password" 
                name="password" 
                value="<%= oldInputs.password %>"
                id="password" required>
            </div>
            <button class="btn" type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
        
    </main>
<%- include('../includes/end.ejs') %>
