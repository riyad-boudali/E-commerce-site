{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "./**/*.js",
        "./**/*.jsx",
        "./**/*.ts",
        "./**/*.tsx"
    ]
}